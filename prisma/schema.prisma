generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TD_User {
  id          String    @id @default(uuid())
  username    String    @unique @db.VarChar(255)
  nama        String    @db.VarChar(255)
  password    String    @db.VarChar(255)
  role        Int       @default(2)
  createAt    DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  TH_User     TH_User[]
  TH_Produk   TH_Produk[]
}

model TH_User {
  id          String    @id @default(uuid())
  userId      String    @db.VarChar(255)
  TD_User     TD_User   @relation(fields: [userId], references: [id])
  action      Int
  createAt    DateTime  @default(now())
}

model TD_Produk {
  id              String    @id @default(uuid())
  nama            String    @db.VarChar(255)
  kondisi         Int
  harga           Int
  spesifikasi     String?   @db.Text
  deskripsi       String?   @db.Text
  createAt        DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  TH_Produk       TH_Produk[]
  TD_ProdukImage  TD_ProdukImage[]
}

model TD_ProdukImage {
  id          String    @id @default(uuid())
  name        String    @db.VarChar(255)
  path        String    @db.VarChar(255)
  primary     Int
  produkId    String    @db.VarChar(255)
  TD_Produk   TD_Produk @relation(fields: [produkId], references: [id])
  createAt    DateTime  @default(now())
}

model TH_Produk {
  id          String    @id @default(uuid())
  aksi        Int
  produkId    String    @db.VarChar(255)
  keterangan  String    @db.VarChar(255) @default("")
  TD_Produk   TD_Produk @relation(fields: [produkId], references: [id])
  userId      String    @db.VarChar(255)
  TD_User     TD_User   @relation(fields: [userId], references: [id])
  createAt    DateTime  @default(now())
}
