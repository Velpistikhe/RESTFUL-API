generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TD_User {
  id          String    @id @default(uuid())
  username    String    @db.VarChar(255)
  nama        String    @db.VarChar(255)
  password    String    @db.VarChar(255)
  role        Int
  createAt    DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  TH_User     TH_User[]
}

model TH_User {
  id          String    @id @default(uuid())
  userId      String    @db.VarChar(255)
  TD_User     TD_User   @relation(fields: [userId], references: [id])
  action      Int
  createAt    DateTime  @default(now())
}

model TD_Item {
  id          String    @id @default(uuid())
  barcode     String    @db.VarChar(255)
  nama        String    @db.VarChar(255)
  jenis       String    @db.VarChar(255)
  berat       Int
  satuan      String    @db.VarChar(10)
  perusahaan  String    @db.VarChar(255)
  harga       Int
  TH_Item     TH_Item[]
  createAt    DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model TH_Item {
  id          String    @id @default(uuid())
  itemId      String    @db.VarChar(255)
  TD_Item     TD_Item   @relation(fields: [itemId], references: [id])
  kriteria    Int
  createAt    DateTime  @default(now())
}